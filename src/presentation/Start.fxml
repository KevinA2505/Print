<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.StartController"
      alignment="CENTER" spacing="20" prefWidth="300" prefHeight="200">
    <children>
        <Label text="Seleccione cantidad de vehículos iniciales:"/>
        <Spinner fx:id="sInitialCars" prefWidth="100"/>
        <Button text="Iniciar simulación" onAction="#startSimulation"/>
    </children>
</VBox>